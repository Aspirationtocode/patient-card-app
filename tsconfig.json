{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "outDir": "./build",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "lib": ["dom", "es7"]
  }
}
